# EspoCRM Docker Environment Variables
# Copy this file to .env and configure according to your needs

# Database Configuration
DB_ROOT_PASSWORD=rootpassword
DB_NAME=espocrm
DB_USER=espocrm
DB_PASSWORD=espocrm_password

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Site Configuration
SITE_URL=http://localhost:8080
ESPOCRM_PORT=8080

# Localization
DEFAULT_LANGUAGE=en_US
DEFAULT_TIMEZONE=UTC

# WebSocket Configuration (Optional)
WEBSOCKET_PORT=8081
WEBSOCKET_URL=ws://localhost:8081
WEBSOCKET_SUBSCRIBER_DSN=tcp://espocrm-websocket:7777
WEBSOCKET_SUBMISSION_DSN=tcp://espocrm-websocket:7778

# Development/Production Mode
# NODE_ENV=production